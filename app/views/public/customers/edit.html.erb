<div class="container">
  <div class="row mt-3">
    <div class="col-sm-4 px-sm-0 offset-sm-1">
      <h4 class="bg-light text-center">会員情報編集</h4><br>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table-borderless">
        <%= form_with model: @customer, url: customers_path, method: :patch, local: true do |f| %>
        <tbody>
          <tr>
            <th>氏名</th>
            <td><%= f.text_field :last_name, :placeholder => "令和", :size => "25" %></td>
            <td><%= f.text_field :first_name, :placeholder => "道子", :size => "25" %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= f.text_field :last_name_kana, :placeholder => "レイワ", :size => "25" %></td>
            <td><%= f.text_field :first_name_kana, :placeholder => "ミチコ", :size => "25" %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= f.text_field :postal_code, :placeholder => "0000000", :size => "25" %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td colspan="2"><%= f.text_field :address, :placeholder => "東京都渋谷区代々木神園町0-0", :size => "58" %> </td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= f.text_field :telephone_number, :placeholder => "00000000000", :size => "25" %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= f.email_field :email, :placeholder => "sample@example.com", :size => "25" %></td>
          </tr>
          <tr>
            <th></th>
            <td>
              <%= f.submit "編集内容を保存", class:"btn btn-success my-4" %>
              <%= link_to "退会する", customers_unsubscribe_path, class:"btn btn-danger my-4 offset-sm-1"  %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>