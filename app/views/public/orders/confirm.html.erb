<div class="container">
  <div class="row mt-5">
    <div class="col-sm-4 px-sm-0">
      <h4 class="bg-light text-center">注文情報確認</h4>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-sm-7 offset-sm-1">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td class="align-middle" style="world-break:break-all">
                <%= attachment_image_tag cart_item.item, :image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %>
                <%= cart_item.item.name %>
              </td>
              <td class="align-middle">
                <%= cart_item.item.with_tax_price.to_s(:delimited) %>
              </td>
              <td class="align-middle">
                <%= cart_item.amount %>
              </td>
              <td class="align-middle">
                <%= cart_item.subtotal.to_s(:delimited) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-3 offset-sm-1">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>送料</th>
            <td><%= @order.shipping_fee  %></td>
          </tr>
          <tr>
            <th>商品合計</th>
            <td><%= total_price(@cart_items).to_s(:delimited) %></td>
          </tr>
          <tr>
            <th>請求金額</th>
            <td><%= (total_price(@cart_items) + @order.shipping_fee).to_s(:delimited) %></td>
          </tr>
        </thead>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-7 offset-sm-1">
      <table class="table table-borderless">
        <tr>
          <th class="col-xs-3 font-weight-bold mb-3">支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th class="col-xs-3 font-weight-bold mb-3">お届け先</th>
          <td><%= "〒#{@order.delivery_postal_code} #{@order.delivery_address} #{@order.delivery_name}" %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <h3 class="mx-auto">
      <%= form_with model: @order, url: orders_path, method: :post, local: true do |f|%>
        <%= f.hidden_field :payment_method %>
        <%= f.hidden_field :delivery_postal_code %>
        <%= f.hidden_field :delivery_address %>
        <%= f.hidden_field :delivery_name %>
        <%= f.hidden_field :amount_billed%>
        <%= f.submit '注文を確定する', class:'btn btn-success'%>
      <% end %>
    </h3>
  </div>
</div>