<div class="container">
  <div class="row mt-5">
    <div class="col-sm-4 px-sm-0">
      <h4 class="bg-light text-center">注文情報入力</h4>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-xs-offset-1">
    <% if current_customer.cart_items.present? %>
      <%= form_with model: @order, url: orders_confirm_path, method: :post, local: true do |f| %>
      <h5 class="col-xs-3 font-weight-bold mb-3">支払方法</h5>
      <div class="col-xs-10">
        <%= f.radio_button :payment_method, :"クレジットカード", checked: true %>
        <%= f.label :"クレジットカード" %>
      </div>
      <div class="col-xs-10">
        <%= f.radio_button :payment_method, :"銀行振込" %>
        <%= f.label :"銀行振込" %>
      </div>
      <h5 class="col-xs-3 font-weight-bold mb-3">お届け先</h5>
      <div class="col-xs-10">
        <%= f.radio_button :address_option, "0", checked: true %>
        <%= f.label :"ご自身の住所" %><br>
        <%= "〒#{current_customer.postal_code} #{current_customer.address}" %><br>
        <%= "#{full_name(current_customer)}" %>
      </div>
      <div class="col-sx-10 my-3">
        <%= f.radio_button :address_option, "1" %>
        <%= f.label :"登録住所から選択" %><br>
        <%= f.collection_select :address_id, @addresses, :id, :full_address %>
      </div>
      <div class="col-sx-10 my-3">
        <%= f.radio_button :address_option, "2" %>
        <%= f.label :"新しいお届け先" %>
        <table>
          <tr>
            <td><%= f.label :delivery_postal_code, "郵便番号(ハイフンなし)" %></td>
            <td><%= f.text_field :delivery_postal_code, :placeholder => "0000000", :size => "30" %></td>
          </tr>
          <tr>
            <td><%= f.label :delivery_address, "住所" %></td>
            <td><%= f.text_field :delivery_address, :placeholder => "東京都渋谷区代々木神園町0-0", :size => "68" %></td>
          </tr>
          <tr>
            <td><%= f.label :delivery_name, "宛名" %></td>
            <td><%= f.text_field :delivery_name, :placeholder => "令和道子", :size => "30" %></td>
          </tr>
        </table>
        <div class="col-xs-8 d-flex justify-content-center mt-5">
          <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
        </div>
      </div>


      <% end %>
    <% end %>
    </div>
  </div>
</div>