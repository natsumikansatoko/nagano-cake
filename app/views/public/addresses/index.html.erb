<div class="container">
  <h4 class="m-5 w-25 bg-light text-center">配送先登録/一覧</h4>
  <div class="row">
    <div class="col-sm-12 px-sm-0 offset-sm-1">
    <%= form_with model: @address, local: true do |f| %>
      <table class="table-borderless">
        <tbody>
          <tr>
            <th>郵便番号(ハイフンなし)</th>
            <td><%= f.text_field :postal_code, :placeholder => "0000000", :size => "30" %></td>
            <td></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= f.text_field :address, :placeholder => "東京都渋谷区神園町0-0", :size => "68" %></td>
            <td></td>
          </tr>
          <tr>
            <th>宛名</th>
            <td><%= f.text_field :name, :placeholder => "令和道子", :size => "30" %></td>
            <td><%= f.submit '新規登録', class: "btn btn-success" %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <table class="table table-bordered">
        <thead>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th colspan="2"></th>
        </thead>
        <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %>
              <%= link_to "削除する", address, method: :delete, date: {confirm: => '本当に削除しますか？', class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>