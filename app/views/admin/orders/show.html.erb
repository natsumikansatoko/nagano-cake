<h4 class="m-5 w-25 bg-light text-center">注文履歴詳細</h4>
<br>
<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <table class="table table-borderless">
         <thead>
            <tr>
              <th>購入者</th>
              <td>
                <%= @order.customer.last_name %>
                <%= @order.customer.first_name %>
              </td>
            </tr>
            <tr>
              <th>注文日</th>
              <td><%= @order.created_at.strftime("%Y-%m-%d %H:%M:%S")%></td>
            </tr>
            <tr>
              <th>配送先</th>
              <td>〒<%= @order.delivery_postal_code %><%= @order.delivery_address %></td>
            </tr>
            <tr>
              <th>支払方法</th>
              <td><%= @order.payment_method %></td>
            </tr>
            <tr>
              <th>注文ステータス</th>
              <td>

              </td>
           </tr>
         </thead>
     </table>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-xs-8">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_items.each do |order_item| %>
            <tr>
              <td><p><%= order_item.item.name %></p></td>
              <td><p><%= order_item.item.add_tax_sales_price %></p></td>
              <td><p><%= order_item.item_count %></p></td>
              <td><p><%= order_item.item.add_tax_sales_price * order_item.item_count %></p></td>
              <td>
                <%= form_with(model: order_item, url: admin_order_item_path(order_item.id),method: :patch, local: true) do |f| %>
                <%=  %>
                <%= f.submit "更新", class:"btn btn-success" %>
                <% end %>
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>
      <div class="col-xs-3 off-set-1">
      <table class="table">
          <tr>
            <th>商品合計</th>
            <td class="text-right col-xs-5"><%= @order.amount_billed%>円</td>
          </tr>
          <tr>
            <th>送料</th>
            <td class="text-right col-xs-5"><%= @order.shipping_fee %>円</td>
          </tr>
          <tr>
            <th>請求金額</th>
            <td class="text-right col-xs-5"><%= @order.amount_billed + @order.shipping_fee %>円</td>
          </tr>
      </table>
      </div>
    </div>
  </div>
</div>