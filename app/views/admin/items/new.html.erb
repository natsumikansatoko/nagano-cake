<h4 class="m-5 w-25 bg-light text-center">商品新規登録</h4>
<br>
<div class="container">
  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto mb-5">
      <% if @item.errors.any? %>
        <%= @item.errors.count %>件のエラーが発生しました
        <ul>
          <% @item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
        <table>
          <tr>
            <div class="form-group">
              <th><%= f.label :商品画像 %></th>
              <td><%= f. %></td>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <th><%= f.label :商品名 %></th>
              <td><%= f.text_field :name, :placeholder => "商品名",size: 40 %></td>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <th><%= f.label :商品説明 %></th>
              <td><%= f.text_area :introduction, size: "40x5", :placeholder => "ここに説明文を記述します" %></td>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <th><%= f.label :ジャンル %></th>
              <td><%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "-- 選択してください --", size: 40 %></td>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <th><%= f.label :税抜価格 %></th>
              <td><%= f.text_field :price, placeholder:"1000" %>円</td>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <th><%= f.label :販売ステータス %></th>
              <td><%= f.radio_button :is_active, true, checked: true %>
                <%= f.label :is_active, "販売中" %>
                <%= f.radio_button :is_active, false %>
                <%= f.label :is_active, "販売停止中" %>
              </td>
            </div>
          </tr>
          <tr>
            <div class="form-action">
              <th><%= f.submit "新規登録", class:"btn btn-success" %></th>
            </div>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>