<h4 class="m-5 w-25 bg-light text-center">ジャンル一覧・追加</h4>
<br>
<div class="container">
  <div class="row">
    <div class="col-lg-8">
    <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <table>
        ジャンル名&ensp;&ensp;
        <%= f.text_field :name, :placeholder => "ジャンル名" %>&ensp;&ensp;
        <%= f.submit '新規登録', class: 'btn btn-success' %>
      </table>
    <% end %>
    </div>
  </div>
<br>
  <div class="col-lg-4">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th class="text-center">ジャンル</th>
          <th></th>
        </tr>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td class="text-right"><%= link_to '編集する', edit_admin_genre_path(genre), class: 'btn btn-success' %></td>
            </tr>
          <% end %>
        </tbody>
      </thead>
    </table>
  </div>
</div>